@import 'bootstrap-sprockets';
@import 'bootstrap';

$gapSize: 20px;
$bgColor: #FFF;

html {
  height: 100%;
}

body {
  height: 100%;
  /*background-color: $bgColor;
  color: #000;*/
}

.custom-background {
    background-image: img-url("periodical_bkgd-490x1050.jpg");
    background-position: left top;
    background-size: auto;
    background-repeat: repeat;
    background-attachment: fixed;
}

.white-background {
  background-color: $bgColor;
}

.columns {
  width: 100%;
  display: table;
  float: left;
  margin: 0;
  min-height: 100%;
  > * {
    padding: 0 $gapSize;
    display: table-cell;
    vertical-align: top;
  }
  .maincol {
    width: 70%;
  }
  .sidecol {
    width: 30%;
    min-width: 300px;
  }
}

.tab {
  padding-left: 4em;
}

.header {
  padding: $gapSize * 2;
  box-shadow: 0 1px 0 rgba(#FFF, 0.2);
  width: 100%;
  height: 150px;
  text-align: center;
}

.search {
  padding: $gapSize;
}

.right {
  text-align: right;
}

.center {
  text-align: center;
}

.bold {
  font-weight: bold;
}

.text {
  color: #FFF;
}

.img_right {
  float: right;
  max-height: 200px;
  margin: 5px;
}

.img_left {
  float: left;
  max-height: 200px;
  margin: 5px;
}

#header_image {
  background: url(<%= asset_path 'oldbooks2.jpg' %>) no-repeat;
}

.toolbar_group {
  width: 100%;
  display: table;
  border-spacing: 0;
  border-collapse: collapse;
  display: table-cell;
  white-space: nowrap;
  padding-left: $gapSize;
  vertical-align: middle;
}

.pagination {
  white-space: nowrap;
  margin: $gapSize / 2 0;
  > * {
    line-height: 2;
    padding: 0 0.5em;
    transition: none;
    margin: 0 1px 0 0;
    font-style: normal;
    text-align: center;
    border-radius: 3px;
    display: inline-block;
    text-decoration: none;
  }
  a:hover {
    background: rgba(#200, 0.1);
  }
  .current {
    color: #EEE;
  }
  .disabled {
    display: none;
  }
  .info {
    line-height: 2;
    text-align: right;
    margin: $gapSize / 2 0;
  }
}

.download {
  max-height: 3em;
  align: right;
}


.selectable {
  max-height: 300px;
  overflow: scroll;
}

.slider-row {
  padding: 10px 0;
  margin: 0 10px;
  .slider-min, .slider-max {
    font-weight: bold;
    padding: 5px 0;
  }
  .slider-min {
    float: left;
  }
  .slider-max {
    float: right;
  }
  .slider {
  }
}

.nav {
  li {
    margin: 10px;
   }
}

.nav-item {
  margin: 15px;
  color: #FFF;
  font-weight: bold;
  display: inline-block;
  vertical-align: middle;
}

.nav-item-greyed {
  margin: 10px;
  color: #FFF;
}

#title_value {
  background-color: #eeeeee;
  margin: 0;
}

.navbar {
  margin: 0px;
}

.navbar-nav {
  float: none;
  text-align: center;
}

.nav-bg {
  background-color: #990033;
}

.footer {
  left: 0;
  bottom: 0;
  width: 100%;
  padding: $gapSize;
  //position: relative;
  height: 60px;
  vertical-align: bottom;
  display: inline-block;
  background: #990033;
  box-sizing: border-box;
}

.footer_copyright {
  text-align: center;
}

.footer_nav {
  float: right;
  margin: 0 20px;

}

